@model FichaAcademia.Dominio.Models.Ficha

@{
    ViewData["Title"] = "Atualizar " + Model.Nome;
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <div class="collection with-header">
                <h6 class="collection-header">Atualziar @Model.Nome</h6>
                <form asp-action="Edit">
                    <div class="collection-item">
                        <div asp-validation-summary="ModelOnly" class="red-text darken-3"></div>
                        <input type="hidden" asp-for="FichaId" />
                        <div class="row">
                            <div class="input-field">
                                <input asp-for="Nome" class="validate" id="Nome" />
                                <label for="Nome">Nome</label>
                                <span asp-validation-for="Nome" class="red-text darken-3"></span>
                            </div>
                        </div>

                        <input asp-for="AlunoId" type="hidden" />

                        <div class="collection-item">
                            <input type="submit" value="Atualizar" class="btn-small blue darken-3" /> &nbsp;
                            <a asp-action="Index" asp-route-AlunoId="@Model.AlunoId" class="btn-small grey darken-1">Voltar</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}